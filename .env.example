# Claude Client Deployment - Environment Configuration
# Copy this file to .env and fill in your values

# Installation Location (optional - defaults to user home directory)
# INSTALL_DIR=/custom/path/to/install

# Project Paths (optional - will use defaults if not set)
# HUBSPOT_PROJECT_PATH=/path/to/hubspot-mcp-railway
# SHAREPOINT_PROJECT_PATH=/path/to/sharepoint-mcp-railway
# ASANA_PROJECT_PATH=/path/to/asana-mcp-railway

# MCP Server URLs (optional - will use production Railway URLs if not set)
# HUBSPOT_MCP_URL=https://hubspot-mcp-railway-production-386b.up.railway.app/mcp
# SHAREPOINT_MCP_URL=https://sharepoint-mcp-railway-production.up.railway.app/mcp
# ASANA_MCP_URL=https://asana-mcp-railway-production.up.railway.app/sse

# MCP Authentication Tokens (REQUIRED - get from your MCP administrator)
# These are used by the orchestrator to authenticate with MCP servers
HUBSPOT_ACCESS_TOKEN=your_hubspot_token_here
# SHAREPOINT_CLIENT_ID=your_sharepoint_client_id_here
# SHAREPOINT_CLIENT_SECRET=your_sharepoint_client_secret_here
# ASANA_ACCESS_TOKEN=your_asana_token_here

# Claude Code CLI Path (optional)
# CLAUDE_CODE_PATH=/custom/path/to/claude

# Debug Mode (optional)
# DEBUG=false
