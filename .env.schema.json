{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Client Deployment Environment Schema",
  "type": "object",
  "properties": {
    "INSTALL_DIR": {
      "type": "string",
      "description": "Custom installation directory (defaults to user home)"
    },
    "HUBSPOT_PROJECT_PATH": {
      "type": "string",
      "description": "Path to HubSpot MCP project directory"
    },
    "SHAREPOINT_PROJECT_PATH": {
      "type": "string",
      "description": "Path to SharePoint MCP project directory"
    },
    "ASANA_PROJECT_PATH": {
      "type": "string",
      "description": "Path to Asana MCP project directory"
    },
    "HUBSPOT_MCP_URL": {
      "type": "string",
      "format": "uri",
      "description": "HubSpot MCP server URL"
    },
    "SHAREPOINT_MCP_URL": {
      "type": "string",
      "format": "uri",
      "description": "SharePoint MCP server URL"
    },
    "ASANA_MCP_URL": {
      "type": "string",
      "format": "uri",
      "description": "Asana MCP server URL"
    },
    "HUBSPOT_ACCESS_TOKEN": {
      "type": "string",
      "description": "HubSpot API access token"
    },
    "SHAREPOINT_CLIENT_ID": {
      "type": "string",
      "description": "SharePoint Azure AD client ID"
    },
    "SHAREPOINT_CLIENT_SECRET": {
      "type": "string",
      "description": "SharePoint Azure AD client secret"
    },
    "ASANA_ACCESS_TOKEN": {
      "type": "string",
      "description": "Asana API access token"
    },
    "CLAUDE_CODE_PATH": {
      "type": "string",
      "description": "Path to Claude Code CLI executable"
    },
    "DEBUG": {
      "type": "string",
      "enum": ["true", "false"],
      "description": "Enable debug logging"
    }
  },
  "anyOf": [
    {"required": ["HUBSPOT_ACCESS_TOKEN"]},
    {"required": ["SHAREPOINT_CLIENT_ID", "SHAREPOINT_CLIENT_SECRET"]},
    {"required": ["ASANA_ACCESS_TOKEN"]}
  ]
}
